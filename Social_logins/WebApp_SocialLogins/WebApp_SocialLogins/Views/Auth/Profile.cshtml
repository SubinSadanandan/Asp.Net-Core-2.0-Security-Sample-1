@model WebApp_SocialLogins.Models.ProfileModel

@if (!ViewContext.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="form-validation"></div>
}

<form class="form-signin" asp-action="Profile" 
            asp-route-returnUrl1="@Context.Request.Query["returnUrl"]">
    <h2>Please add the following information</h2>
    <label class="sr-only">Display Name</label>

    <input type="text" class="form-control" placeholder="Display Name" asp-for="DisplayName" />
    <label class="sr-only">Email</label>
    <input type="text" class="form-control" placeholder="E-Mail" asp-for="Email" />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>

</form>